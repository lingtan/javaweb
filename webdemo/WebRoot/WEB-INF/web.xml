<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UserOperate</servlet-name>
    <servlet-class>erp.UserOperate</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UserSelectAll</servlet-name>
    <servlet-class>erp.UserSelectAll</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UnitOperate</servlet-name>
    <servlet-class>common.UnitOperate</servlet-class>
  </servlet>
   <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ProductCategoryOperate</servlet-name>
    <servlet-class>erp.ProductCategoryOperate</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>SqlOperate</servlet-name>
    <servlet-class>common.SqlOperate</servlet-class>
  </servlet>


  



  <servlet-mapping>
    <servlet-name>UserOperate</servlet-name>
    <url-pattern>/servlet/UserOperate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserSelectAll</servlet-name>
    <url-pattern>/servlet/UserSelectAll</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UnitOperate</servlet-name>
    <url-pattern>/servlet/UnitOperate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SqlOperate</servlet-name>
    <url-pattern>/servlet/SqlOperate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductCategoryOperate</servlet-name>
    <url-pattern>/servlet/ProductCategoryOperate</url-pattern>
  </servlet-mapping>
 
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>   
  <description>webdb</description>   
  <res-ref-name>jdbc/webdb</res-ref-name>   
  <res-type>javax.sql.DataSource</res-type>   
  <res-auth>Container</res-auth>   
</resource-ref>
</web-app>
